
<div id="page-wrapper">
        <div class="container-fluid">
            <div class="row" id="main" >
                <div class="col-sm-12 col-md-4 well" id="inputText">
                      <%= form_tag qrcodes_path do |f| %>
                      <div class="form-group">
                      <%= text_field_tag(:text,nil,:class => "form-control") %>
                      </div>
                      <div class="form-group">
                      <%= submit_tag("Generate",:class => "btn btn-large btn-primary")%>
                      </div>
                      <% end %>
                </div>
                <h3>Result</h3>
                <div class="col-sm-8 col-md-6 well" id="result">
                     <div class="form-group">
                      <table class="qr-code">
                        <% if @qr.present? %>
                          <% @qr.modules.each_index do |x| %>
                           <tr>
                           <% @qr.modules.each_index do |y| %>
                           <% if @qr.dark?(x,y) %>
                           <td class="black"/>
                           <% else %>
                           <td class="white"/>
                           <% end %>
                           <% end %>
                           </tr>
                           <% end %>
                         <% end %>
                       </table>
                    </div>
                </div>
             </div>
        </div>
</div>